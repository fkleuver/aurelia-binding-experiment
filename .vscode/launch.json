{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "tsconfig-test.json"
      },
      "args": [
        "./test/**/*.ts",
        "--require",
        "ts-node/register",
        "--globals",
        "expect",
        "--watch-extensions",
        "ts",
        "--colors",
        "--recursive",
        "--timeout",
        "5000"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}
